@using Microsoft.AspNet.Identity
@model CarRental.Models.client
@{
    ViewBag.Title = "Infos";
}

<h2>Infos personnelles</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>client</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.Message, disabled = "disabled" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_cl, new { htmlAttributes = new { @class = "form-control", placeholder = "Nom" } })
                @Html.ValidationMessageFor(model => model.nom_cl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.prenom_cl, new { htmlAttributes = new { @class = "form-control", placeholder = "Prénom" } })
                @Html.ValidationMessageFor(model => model.prenom_cl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.tel_cl, new { htmlAttributes = new { @class = "form-control", placeholder = "Téléphone" } })
                @Html.ValidationMessageFor(model => model.tel_cl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.adresse_cl, new { htmlAttributes = new { @class = "form-control", placeholder = "Adresse" } })
                @Html.ValidationMessageFor(model => model.adresse_cl, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CIN_cl, new { htmlAttributes = new { @class = "form-control", placeholder = "CIN" } })
                @Html.ValidationMessageFor(model => model.CIN_cl, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save">&nbsp;Enregistrer</i></button>
                <button type="reset" class="btn btn-danger"><i class="fas fa-undo">&nbsp;Annuler</i></button>
            </div>
        </div>
    </div>
}

