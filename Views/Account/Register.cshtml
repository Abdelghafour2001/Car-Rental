@model CarRental.Models.RegisterViewModel
@{
    ViewBag.Title = "S'inscrire";
}


<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Créez un nouveau compte.</h1>
                        </div>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address", @class = "form-control form-control-user" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Phone, new { placeholder = "Phone", @class = "form-control form-control-user" })
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Mot de passe", @class = "form-control form-control-user" })
                                </div>
                                <div class="col-sm-6">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirmez mot de passe", @class = "form-control form-control-user" })
                                </div>
                            </div>
                            <div class="form-group"> 
                                    @Html.DropDownListFor(m => m.UserRoles, (IEnumerable<SelectListItem>)ViewBag.Name, new { @class = "form-control form-control-user" })                               
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-default btn-primary" value="S'inscrire" />
                                </div>
                            </div>
                            <hr>
                            <a href="index.html" class="btn btn-google btn-user btn-block">
                                <i class="fab fa-google fa-fw"></i> S'inscrire avec compte Google
                            </a>
                            <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                <i class="fab fa-facebook-f fa-fw"></i> S'inscrire avec compte Facebook
                            </a>
                        }
                        <hr>
                        <div class="text-center">
                            <a class="small" href="#">Mot de passe oublié?</a>
                        </div>
                        <div class="text-center">
                            @Html.ActionLink("Vous avez déja un compte? Connectez-vous!", "Login")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
