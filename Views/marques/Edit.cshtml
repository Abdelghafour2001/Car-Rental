@model CarRental.Models.marque

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Marque</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idmarque)

    <div class="mb-3">
        @Html.TextBoxFor(model => model.nom_marque, new { placeholder = "Nom de la marque", @class = "form-control form-control-user" })
        @Html.ValidationMessageFor(model => model.nom_marque, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.TextBoxFor(m => m.pays, new { placeholder = "Pays", @class = "form-control form-control-user" })
        @Html.ValidationMessageFor(model => model.pays, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.TextBoxFor(m => m.logo, new { placeholder = "Logo", @class = "form-control form-control-user" })
        @Html.ValidationMessageFor(model => model.logo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
