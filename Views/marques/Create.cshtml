@model CarRental.Models.marque

@{
    ViewBag.Title = "Create";
}



<div class="card shadow mb-6" style="margin:0px 40px">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Ajouter 
        </h6>
    </div>
    <!-- /.container-fluid -->
    <div class="card-body " style="margin:0px 20px">
        @using (Html.BeginForm("Create", "marques", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="mb-3">
                @Html.TextBoxFor(model => model.nom_marque, new { placeholder = "Nom de la marque", @class = "form-control form-control-user" })
                @Html.ValidationMessageFor(model => model.nom_marque, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.TextBoxFor(m => m.pays, new { placeholder = "Pays", @class = "form-control form-control-user" })
                @Html.ValidationMessageFor(model => model.pays, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.TextBoxFor(m => m.logo, new { placeholder = "Logo", @class = "form-control form-control-user" })
                @Html.ValidationMessageFor(model => model.logo, "", new { @class = "text-danger" })
            </div>

            <div class="panel-footer">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save">&nbsp;Enregistrer</i></button>
                <button type="reset" class="btn btn-danger"><i class="fas fa-undo">&nbsp;Annuler</i></button>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>


</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
